<div class="header">
  <div class="month">
    Octobre
  </div>
  <ul>
    <li>lundi</li>
    <li>mardi</li>
    <li>mercredi</li>
    <li>jeudi</li>
    <li>vendredi</li>
    <li>samedi</li>
    <li>dimanche</li>
  </ul>
</div>

<div class="week-container">
  <div ng-repeat="week in nextWeeks" class="week">
    <ul>
      <li ng-repeat="(date, day) in week">
        <p class="day-number">{{ date | dayFromDate }}</p>
        <p class="event">
          {{ day.description }}
        </p>
      </li>
    </ul>
  </div>
</div>