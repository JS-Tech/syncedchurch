<%= form_for @group, remote: true do |f| %>
    
  <%= render 'fields', f: f %>

<% end %>

<%= form_tag add_group_path(@group), remote: true do %>
  
  <%= select_tag :member_id, nil, prompt: t("views.members.select"), class: "selectize-member", id: "member_id" %>

  <%= label_tag :status %>
  <%= select_tag :status, options_for_enum(GroupMember.new, :status) %>

  <%= submit_tag t("views.groups.add") %>

<% end %>

<%= render 'members' %>