<%= form_for @group, remote: true do |f| %>
    
  <%= render 'error_messages', object: f.object %>

  <%= f.label :group_type %>
  <%= f.select :group_type, options_for_enum(Group, :group_types, @group.group_type) %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :place %>
  <%= f.select :place, options_for_enum(Group, :places, @group.place) %>

  <%= f.submit %>

<% end %>

<%= form_tag add_group_path(@group), remote: true do %>
  
  <%= select_tag :member_id, nil, prompt: t("views.members.select"), id: "selectize-member" %>

  <%= label_tag :status %>
  <%= select_tag :status, options_for_enum(GroupMember, :statuses) %>

  <%= submit_tag t("views.groups.add") %>

<% end %>

<%= render 'members' %>