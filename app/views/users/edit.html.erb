<%= form_for @user do |f| %>

  <%= render 'error_messages', object: f.object %>

  <%= f.label :current_password %>
  <%= f.password_field :current_password %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>

  <%= f.submit %>

<% end %>