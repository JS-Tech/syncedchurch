<div id="sidenav" class="layout layout-col">
  <div id="tool-title" class="layout">
    <div>
      <%= yield :tool_title %>
    </div>
  </div>
  <div id="tool-content" class="flex">
    <div id="sidebar" class="list-items">

      <%= active_block("pages#dashboard") do %>
        <%= image_tag image_url "layout/sidenav/dashboard.svg" %>
        <%= link_to t("header.dashboard"), dashboard_path %>
      <% end if signed_in? %>

      <%= active_block("members") do %>
        <%= image_tag image_url "layout/sidenav/members.svg" %>
        <%= link_to t("header.members"),   members_path %>
      <% end if rights? :read, "members" %>

      <%= active_block("followups") do %>
        <%= image_tag image_url "layout/sidenav/groups.svg" %>
        <%= link_to t("header.followups"), followups_path %>
      <% end if rights? :read, "followups" %>

      <%= active_block("groups") do %>
        <%= image_tag image_url "layout/sidenav/groups.svg" %>
        <%= link_to t("header.groups"),    groups_path %>
      <% end if rights? :read, "groups" %>

      <%= active_block("meetings") do %>
        <%= image_tag image_url "layout/sidenav/meetings.svg" %>
        <%= link_to t("header.meetings"),  meetings_path %>
      <% end if rights? :read, "meetings" %>

      <%= active_block("events") do %>
        <%= image_tag image_url "layout/sidenav/events.svg" %>
        <%= link_to t("header.events"),    events_path %>
      <% end if rights? :read, "events" %>

      <%= active_block("users") do %>
        <%= image_tag image_url "layout/sidenav/users.svg" %>
        <%= link_to t("header.users"),     users_path %>
      <% end if rights? :read, "users" %>

      <%= active_block("adeia") do %>
        <%= image_tag image_url "layout/sidenav/permissions.svg" %>
        <%= link_to t("header.permissions"), "/adeia/permissions" %>
      <% end if rights? :read, "adeia/permissions" %>

    </div>
  </div>
</div>
